<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit" >
  <LinearLayout android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:paddingBottom="@dimen/activity_vertical_margin"
    			android:paddingLeft="@dimen/activity_horizontal_margin"
    			android:paddingRight="@dimen/activity_horizontal_margin"
    			android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

<TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Name"/>
<EditText android:id="@+id/change_name"
                android:layout_width="fill_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Twitter Username"/>
<EditText android:id="@+id/change_twitter"
                android:layout_width="fill_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:clickable="false"
				android:enabled="false"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Facebook Username"/>

<EditText android:id="@+id/change_facebook"
                android:layout_width="fill_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:clickable="false"
				android:enabled="false"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Mobile"/>
<EditText android:id="@+id/change_mobile"
                android:layout_width="fill_parent"
                android:inputType="text|number"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>

<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Personnal Website"/>
<EditText android:id="@+id/change_web"
                android:layout_width="fill_parent"
                android:inputType="textWebEmailAddress"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Personal Email"/>
<EditText android:id="@+id/change_email"
                android:layout_width="fill_parent"
                android:inputType="text|textEmailAddress"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Organisation Name"/>
<EditText android:id="@+id/change_org_name"
                android:layout_width="fill_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Organization Website"/>
<EditText android:id="@+id/change_org_web"
                android:layout_width="fill_parent"
                android:inputType="textWebEmailAddress"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
<TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Organization Email"/>
<EditText android:id="@+id/change_org_email"
                android:layout_width="fill_parent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
 <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#44b2eb"
                android:textStyle="bold"
                android:text="Organization Address"/>
 <EditText android:id="@+id/change_org_add"
                android:layout_width="fill_parent"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"
                android:maxLines="8"/>
  <Button 
          android:id="@+id/updateButton"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_gravity="center_horizontal"
          android:background="#44b2eb"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:textColor="#ffffff"
          android:textStyle="bold|italic"
          android:text="Update Profile"
          android:textSize="15sp"/>
</LinearLayout>

</ScrollView>
